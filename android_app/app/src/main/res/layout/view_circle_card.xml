<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
    android:id="@+id/circle_card"
    android:layout_width="match_parent"
    android:layout_height="196dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#CAE6EC"
    app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="健身记录"
                android:id="@+id/circle_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#666565"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

            <View
                android:id="@+id/chart_line"
                android:layout_width="match_parent"
                android:layout_height="4sp"
                android:layout_below="@id/circle_title"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#fff"/>
        </RelativeLayout>
        <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="#CAE6EC">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/circle_img"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:text="目标"
                android:id="@+id/circle_goal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666565"
                android:gravity="center_horizontal"
                android:ellipsize="end"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                />

            <TextView
                android:text="完成"
                android:id="@+id/circle_result"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666565"
                android:gravity="center_horizontal"
                android:ellipsize="end"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:text="占比"
                android:id="@+id/circle_percent"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666565"
                android:gravity="center_horizontal"
                android:ellipsize="end"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:text="加油哦！"
                android:id="@+id/circle_finished"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666565"
                android:gravity="center_horizontal"
                android:ellipsize="end"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>
