<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="@string/account_settings">

        <!--<android.support.v7.preference.Preference-->
            <!--android:title="@string/jawbone_up"-->
            <!--android:key="jawbone_up"/>-->
        <android.support.v7.preference.Preference
            android:title="@string/password"
            android:key="password"/>

        <android.support.v7.preference.Preference
            android:title="@string/logout"
            android:key="logout"/>


    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="@string/basic_settings">

        <android.support.v7.preference.Preference
            android:title="@string/clear_image_cache"
            android:key="clear_glide_cache"/>

        <android.support.v7.preference.ListPreference
            android:title="@string/time_of_saving_articles"
            android:key="time_of_saving_articles"
            android:entries="@array/time_to_save_opts"
            android:entryValues="@array/time_to_save_values"
            android:defaultValue="7"/>

        <android.support.v7.preference.ListPreference
            android:title="@string/time_of_showing_datas"
            android:key="time_of_showing_datas"
            android:entries="@array/time_to_show_opts"
            android:entryValues="@array/time_to_show_values"
            android:defaultValue="7"/>

    </android.support.v7.preference.PreferenceCategory>



    <android.support.v7.preference.PreferenceCategory
        android:title="@string/author">

        <android.support.v7.preference.Preference
            android:title="@string/author_name"
            android:key="author"
            android:summary="@string/author_description"/>

        <android.support.v7.preference.Preference
            android:title="@string/follow_me_on_github"
            android:key="follow_me_on_github"
            android:summary="@string/github_url"/>


        <android.support.v7.preference.Preference
            android:title="@string/follow_me_on_weibo"
            android:key="follow_me_on_weibo"
            android:summary="@string/weibo_url"/>

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="@string/about">

        <android.support.v7.preference.Preference
            android:title="@string/version" />

        <android.support.v7.preference.Preference
            android:title="@string/rate"
            android:key="rate"
            android:summary="@string/rate_description" />

        <android.support.v7.preference.Preference
            android:title="@string/feedback"
            android:key="feedback"
            android:summary="@string/feedback_description"/>

        <android.support.v7.preference.Preference
            android:title="@string/coffee"
            android:key="coffee"
            android:summary="@string/coffee_description"/>

        <android.support.v7.preference.Preference
            android:title="@string/open_source_license"
            android:key="open_source_license" />

    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>